#
# Open Watcom Debugger makefile (RFX)
#

proj_name = rfx

rfx_autodepends = .AUTODEPEND

dig_os = $(host_os)
!ifeq host_cpu 386
!ifeq host_os os2
dig_os = os2v2
!endif
!endif

.EXTENSIONS : .str

!include cproj.mif
!include defrule.mif
!include deftarg.mif

!include $(dig_dir)/trpcli.mif

inc_dirs = -I.. -I"$(wv_dir)/h" -I"$(dig_dir)/h" -I"$(dig_dir)/c"

extra_cpp_flags = -DBUILD_RFX

extra_c_flags = -s

extra_l_flags = op map

objs = rfx.obj        &
       rfxacc.obj     &
       stubs.obj      &
       remmisc.obj    &
       remfile.obj    &
       remenv.obj     &
       doserr.obj     &
       dbgfile.obj    &
       local$(host_os).obj &
       $(trap_objs)

!ifeq dig_os os2v2
objs += $(host_os)2flio.obj &
!else
objs += $(host_os)filio.obj &
!endif

!ifeq host_os dos
objs += inthdlrs.obj
!endif

rfx.exe : $(objs) $(__MAKEFILES__)
!ifndef __WATCOM__
        $(cl) $(clflags) $(objs) $(libs) $(ldflags)
!else
        $(linker) name $^@ $(lflags) file { $(objs) }
!endif


.str: $(wv_dir)/h

.c: ..;../$(host_os)$(host_cpu);$(wv_dir)/$(host_os)/c;$(wv_dir)/c;$(dig_srcs);../../win/c

.asm: ..;../$(host_os)i86
