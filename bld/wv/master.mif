!else
extra_l_flags_win_i86 = op stack=15K, heap=10K, align=512
!endif
extra_l_flags_win = $(extra_l_flags_win_$(host_cpu))
!ifeq sys_windowed 1
extra_l_flags_nt = op stack=100k
!endif
extra_l_flags_dos_i86 = op stack=12k, area=0
