proj_name = re2c
re2c_autodepends = .autodepend

!include cproj.mif
!include defrule.mif
!include deftarg.mif

inc_dirs = -I"$(re2c_dir)/h"

.c: ../c

objs =                  &
       actions.obj      &
       code.obj         &
       dfa.obj          &
       main.obj         &
       parser.obj       &
       scanner.obj      &
       substr.obj

!ifdef __WATCOM_TOOLS__
extra_c_flags_scanner = -wcd=118
extra_c_flags_parser = -pil
!endif

$(proj_name).exe : $(objs) $(__MAKEFILES__)
!ifndef __WATCOM_TOOLS__
        $(cl) $(clflags) $(objs) $(ldflags)
!else
        $(linker) name $@ $(lflags) file {$(objs)}
!endif
