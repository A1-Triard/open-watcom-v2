!ifeq host_os win
!ifeq host_cpu 386
!define win386
!endif
!endif

!ifdef win386
lname = $^&.rex
!else
lname = $^@
!endif

!ifeq verbose 0
wbind_quiet = -q
!endif

bind_win386: .PROCEDURE .EXPLICIT
!ifdef win386
!ifeq verbose 0
    @echo wbind $(win386_dir)/ext/win386.ext $^&.res $@
!endif
    $(wbind) $(lname) $(wbind_quiet) -s $(win386_dir)/ext/win386.ext -R -q $^&.res $^@
    @rm -f $(lname)
!endif
