!else
!  ifdef plustest_name
!    ifeq plustest_name perl
!      define csrc_comp $(wcc_$(arch))
!    else
!      define csrc_comp $(wpp_$(arch))
!    endif
!  else
!    define csrc_comp $(wcc_$(arch))
!  endif
